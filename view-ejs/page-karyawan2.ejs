<style>
    .p5 {
        padding: 5px;
    }
</style>

<h1>List Karyawan</h1>
<% if (typeof notifikasi !== 'undefined') { %>
<span style="color: green;"><b><%= notifikasi %></b></span>
<br><br>
<% } %>

<a href="/karyawan2/tambah2">
    <button>+ karyawan baru</button>
</a>
<br><br>

<table border="1">
    <thead>
        <tr>
            <!-- <th>NIK</th>
            <th>Nama</th>
            <th>Jabatan</th>
            <th>Jabatan</th> -->
            <th>Name</th>
            <th>Position</th>
            <th>Join Date</th>
            <th>Release Date</th>
            <th>Years of Experience</th>
            <th>Salary</th>
            <th colspan="3">Aksi</th>
            <!-- <th colspan="3">Aksi</th> -->
        </tr>
    </thead>
    <tbody>
        <% for (const i in karyawan) { %>
            <tr>
                <td class="p5"><%= karyawan[i].name %></td>
                <td class="p5"><%= karyawan[i].position %></td>
                <td class="p5"><%= karyawan[i].join_date %>/<%= karyawan[i].join_month %>/<%= karyawan[i].join_year %></td>
                <td class="p5"><%= karyawan[i].release_date %>/<%= karyawan[i].release_month %>/<%= karyawan[i].release_year %></td>
                <td class="p5"><%= karyawan[i].experience %> Years</td>
                <td class="p5">$ <%= karyawan[i].salary %></td>
                
                <td class="p5">
                    <a href="/karyawan2/edit2/<%= karyawan[i].id %>">
                        <button>edit</button>
                    </a>
                </td>
                <td class="p5">
                    <a href="/karyawan2/hapus2/<%= karyawan[i].id %>"
                        onclick="return confirm('Yakin ingin hapus permanen <%= karyawan[i].nama %> ?')">
                        <button>hapus</button>
                    </a>
                </td>
            </tr>
        <% } %>
    </tbody>

</table>

